<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/itemIvCover"
        android:layout_width="150dp"
        android:layout_height="120dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/itemTvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="32dp"
        android:text="Item View"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/itemIvCover"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/itemBtnUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:text="Update"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/itemIvCover"
        app:layout_constraintTop_toBottomOf="@+id/itemTvName" />

    <Button
        android:id="@+id/itemBtnDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="30dp"
        android:text="Delete"
        android:textSize="10sp"
        app:iconPadding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/itemBtnUpdate"
        app:layout_constraintTop_toBottomOf="@+id/itemTvName" />
</androidx.constraintlayout.widget.ConstraintLayout>